<h2>Lista dzieci</h2>

<ul>
    {{#each childrenList}}
        <li>
            <form action="/child/gift/{{this.id}}?_method=PATCH" method="POST">
                <label>
                    {{this.name}}
                    <select name="giftId">
                        <option value="">Brak</option>  <!-- domyslnie brak a moze byc  {{this.gift}} -->
                        {{#each ../giftsList}}
                            <option value="{{this.id}}" {{#if (equals this.id ../giftId)}}selected="selected"{{/if}}>
                                {{this.name}}
                            </option>
                        {{/each}}
                    </select>
                    <button>Zapisz</button>
                </label>
            </form>
        </li>
    {{/each}}
</ul>

